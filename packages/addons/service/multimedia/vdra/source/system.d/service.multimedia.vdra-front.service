[Unit]
Description=vdr-front
ConditionPathExists=|/storage/.cache/services/vdr-front.run
After=multi-user.target

[Service]
EnvironmentFile=-/storage/.cache/services/vdr-front.run
ExecStart=/bin/sh -c "exec sh /storage/.kodi/addons/service.multimedia.vdra/bin/vdr-front.start"
KillMode=process
TimeoutStopSec=5
Restart=always
RestartSec=2
StartLimitInterval=0
LimitNOFILE=16384

[Install]
WantedBy=multi-user.target