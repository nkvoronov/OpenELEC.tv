<menumain x="0" y="0" width="100%" height="100%" fadetime="0" scaletvx="0" scaletvy="12%" scaletvwidth="54%" scaletvheight="54%">

	<background>
		<area x="0" y="0" width="100%" height="100%" layer="1">
			<drawimage condition="not{brightBackground}" x="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="gradientPNG" />
			<drawimage condition="{brightBackground}" x="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="gradientPNGBright" />            
			<drawrectangle x="0%" y="12%" width="54%" height="54%" color="{clrTransparent}" />
		</area>
		<area x="0" y="0" width="100%" height="100%" layer="2">
			<drawimage x="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="shadowsMainShady" />
		</area>
		<area x="0" y="0" width="100%" height="11%" layer="3">
			<drawimage  x="0" width="{areawidth}*0.972" height="{areaheight}*0.972" imagetype="skinpart" path="gradientHeader" />           
		</area>
		<area x="2%" y="0" width="10%" height="10%" layer="4">
			<drawimage  x="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="VDR" />
		</area>
	</background>

	<header>
		<area x="0" y="0" width="0" height="0" layer="3">
		</area>
	</header>

	<colorbuttons>
		<area x="1%" y="67%" width="13%" height="5%" layer="3">
			<drawimage x="0" y="93%" width="{areawidth}" height="{areaheight}/9" imagetype="skinpart" path="buttonBlancMain" />
			<drawtext condition="{red1}" x="0" y="{areaheight}*0.07" align="center" font="{light}" fontsize="65%" color="{clrLightGray}" text="{red}" />
			<drawimage  condition="{red1}++isset{red}" x="0" y="93%" width="{areawidth}" height="{areaheight}/9" imagetype="skinpart" path="buttonRedMain" />
			<drawtext condition="{green1}" x="0" y="{areaheight}*0.07" align="center" font="{light}" fontsize="65%" color="{clrLightGray}" text="{green}" />
			<drawimage  condition="{green1}++isset{green}" x="0" y="93%" width="{areawidth}" height="{areaheight}/9" imagetype="skinpart" path="buttonGreenMain" />            
			<drawtext condition="{yellow1}" x="0" y="{areaheight}*0.07" align="center" font="{light}" fontsize="65%" color="{clrLightGray}" text="{yellow}" />
			<drawimage  condition="{yellow1}++isset{yellow}" x="0" y="93%" width="{areawidth}" height="{areaheight}/9" imagetype="skinpart" path="buttonYellowMain" />           
				<drawtext condition="{blue1}" x="0" y="{areaheight}*0.07" align="center" font="{light}" fontsize="65%" color="{clrLightGray}" text="{blue}" />
			<drawimage  condition="{blue1}++isset{blue}" x="0" y="93%" width="{areawidth}" height="{areaheight}/9" imagetype="skinpart" path="buttonBlueMain" />           
		</area>
		<area x="14%" y="67%" width="13%" height="5%" layer="3">
			<drawimage x="0" y="93%" width="{areawidth}" height="{areaheight}/9" imagetype="skinpart" path="buttonBlancMain" />
			<drawtext condition="{red2}" x="0" y="{areaheight}*0.07" align="center" font="{light}" fontsize="65%" color="{clrLightGray}" text="{red}" />
			<drawimage  condition="{red2}++isset{red}" x="0" y="93%" width="{areawidth}" height="{areaheight}/9" imagetype="skinpart" path="buttonRedMain" />           
			<drawtext condition="{green2}" x="0" y="{areaheight}*0.07" align="center" font="{light}" fontsize="65%" color="{clrLightGray}" text="{green}" />
			<drawimage  condition="{green2}++isset{green}" x="0" y="93%" width="{areawidth}" height="{areaheight}/9" imagetype="skinpart" path="buttonGreenMain" />
			<drawtext condition="{yellow2}" x="0" y="{areaheight}*0.07" align="center" font="{light}" fontsize="65%" color="{clrLightGray}" text="{yellow}" />
			<drawimage  condition="{yellow2}++isset{yellow}" x="0" y="93%" width="{areawidth}" height="{areaheight}/9" imagetype="skinpart" path="buttonYellowMain" />                    
			<drawtext condition="{blue2}" x="0" y="{areaheight}*0.07" align="center" font="{light}" fontsize="65%" color="{clrLightGray}" text="{blue}" />
			<drawimage  condition="{blue2}++isset{blue}" x="0" y="93%" width="{areawidth}" height="{areaheight}/9" imagetype="skinpart" path="buttonBlueMain" />
		</area>
		<area x="27%" y="67%" width="13%" height="5%" layer="3">
			<drawimage x="0" y="93%" width="{areawidth}" height="{areaheight}/9" imagetype="skinpart" path="buttonBlancMain" />
			<drawtext condition="{red3}" x="0" y="{areaheight}*0.07" align="center" font="{light}" fontsize="65%" color="{clrLightGray}" text="{red}" />
			<drawimage  condition="{red3}++isset{red}" x="0" y="93%" width="{areawidth}" height="{areaheight}/9" imagetype="skinpart" path="buttonRedMain" />
			<drawtext condition="{green3}" x="0" y="{areaheight}*0.07" align="center" font="{light}" fontsize="65%" color="{clrLightGray}" text="{green}" />
			<drawimage  condition="{green3}++isset{green}" x="0" y="93%" width="{areawidth}" height="{areaheight}/9" imagetype="skinpart" path="buttonGreenMain" />           
			<drawtext condition="{yellow3}" x="0" y="{areaheight}*0.07" align="center" font="{light}" fontsize="65%" color="{clrLightGray}" text="{yellow}" />
			<drawimage  condition="{yellow3}++isset{yellow}" x="0" y="93%" width="{areawidth}" height="{areaheight}/9" imagetype="skinpart" path="buttonYellowMain" />            
			<drawtext condition="{blue3}" x="0" y="{areaheight}*0.07" align="center" font="{light}" fontsize="65%" color="{clrLightGray}" text="{blue}" />
			<drawimage  condition="{blue3}++isset{blue}" x="0" y="93%" width="{areawidth}" height="{areaheight}/9" imagetype="skinpart" path="buttonBlueMain" />
		</area>
		<area x="40%" y="67%" width="13%" height="5%" layer="3">
			<drawimage x="0" y="93%" width="{areawidth}" height="{areaheight}/9" imagetype="skinpart" path="buttonBlancMain" />
			<drawtext condition="{red4}" x="20" y="{areaheight}*0.07" align="center" font="{light}" fontsize="65%" color="{clrLightGray}" text="{red}" />
			<drawimage  condition="{red4}++isset{red}" x="0" y="93%" width="{areawidth}" height="{areaheight}/9" imagetype="skinpart" path="buttonRedMain" />           
			<drawtext condition="{green4}" x="20" y="{areaheight}*0.07" align="center" font="{light}" fontsize="65%" color="{clrLightGray}" text="{green}" />
			<drawimage  condition="{green4}++isset{green}" x="0" y="93%" width="{areawidth}" height="{areaheight}/9" imagetype="skinpart" path="buttonGreenMain" />           
			<drawtext condition="{yellow4}" x="20" y="{areaheight}*0.07" align="center" font="{light}" fontsize="65%" color="{clrLightGray}" text="{yellow}" />
			<drawimage  condition="{yellow4}++isset{yellow}" x="0" y="93%" width="{areawidth}" height="{areaheight}/9" imagetype="skinpart" path="buttonYellowMain" />            
			<drawtext condition="{blue4}" x="0" y="{areaheight}*0.07" align="center" font="{light}" fontsize="65%" color="{clrLightGray}" text="{blue}" />
			<drawimage  condition="{blue4}++isset{blue}" x="0" y="93%" width="{areawidth}" height="{areaheight}/9" imagetype="skinpart" path="buttonBlueMain" />            
		</area>
	</colorbuttons>

	<timers detached="true" delay="{02_timersDelay}" fadetime="{02_timersFadetime}" >
		<area x="0" y="74%" width="45%" height="6%" layer="3">
			<drawimage  x="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="shadowsTimersHeader" />
		</area>
		<area condition="not{numtimerconflicts}" x="1%" y="74%" width="45%" height="5%" layer="3">
			<drawtext condition="eq({numtimers}, 0)||gt({numtimers}, 1)" align="center" y="15%" font="{light}" fontsize="70%" color="{clrLightGray}" text="{numtimers}  {tr(activetimers)}" />
			<drawtext condition="eq({numtimers}, 1)" align="center" y="15%" font="{light}" fontsize="70%" color="{clrLightGray}" text="{tr(activetimer)}" />
		</area>
		<area condition="{numtimerconflicts}" x="16%" y="74%" width="19%" height="5%" layer="3">
			<drawtext name="timer" align="left" y="15%" font="{light}" fontsize="70%" color="{clrLightGray}" text="{numtimers} {tr(activetimers)}" />
			<drawtext condition="eq({numtimerconflicts}, 1)" align="right" y="15%" font="{light}" fontsize="70%" color="{clrRed}" text="{numtimerconflicts} {tr(conflict)}!" />           
			<drawtext condition="gt({numtimerconflicts}, 1)" align="right" y="15%" font="{light}" fontsize="70%" color="{clrRed}" text="{numtimerconflicts} {tr(conflicts)}!" />
		</area>
		<!--<area x="1%" y="80%" width="95%" height="18%" layer="3">
			<loop name="timers" x="0" y="0" orientation="horizontal" columnwidth="{areawidth}/9*1.005" rowheight="{areaheight}" overflow="cut">
				<drawimage  cache="true" name="logo" y="{areaheight}*0.11" width="5%" height="15%" align="center" imagetype="channellogo" path="{timers[channelid]}" />
				<drawtextbox x="1%" y="40%" width="{columnwidth}*0.8" align="center" maxlines="2" font="{light}" fontsize="15%" color="{clrLightGray}" text="{timers[title]}" />
				<drawtext condition="not{timers[recording]}" align="center" y="78%" font="{light}" fontsize="15%" color="{clrLightGray}" text="{timers[datetime]}"/>
				<drawtext condition="{timers[recording]}" align="center" y="78%" font="{light}" fontsize="15%" color="{clrRed}" text="{timers[datetime]}"/>
			</loop>
		</area>-->
		<area x="1%" y="80%" width="44%" height="18%" layer="3">
			<loop name="timers" x="0" y="0" orientation="horizontal" columnwidth="{areawidth}/4" rowheight="{areaheight}" overflow="cut">
				<drawimage x="0" y="0" width="{columnwidth}" height="{rowheight}" imagetype="skinpart" path="shadowsTimerMain" />
			</loop>
		</area>
		<area x="1%" y="80%" width="44%" height="18%" layer="3">
			<loop name="timers" x="0" y="0" orientation="horizontal" columnwidth="{areawidth}/4*1.005" rowheight="{areaheight}" overflow="cut">
				<!--<drawimage  cache="true" name="logo" y="{areaheight}*0.11" width="5%" height="15%" align="center" imagetype="channellogo" path="{timers[channelid]}" />-->
				<drawimage  cache="true" name="logo" y="{areaheight}*0.08" width="10%" height="20%" align="center" imagetype="channellogo" path="{timers[channelid]}" />
				<drawtextbox x="2%" y="40%" width="{columnwidth}*0.8" align="center" maxlines="2" font="{light}" fontsize="15%" color="{clrLightGray}" text="{timers[title]}" />
				<drawtext condition="not{timers[recording]}" align="center" y="78%" font="{light}" fontsize="15%" color="{clrLightGray}" text="{timers[datetime]}"/>
				<drawtext condition="{timers[recording]}" align="center" y="78%" font="{light}" fontsize="15%" color="{clrRed}" text="{timers[datetime]}"/>
				<drawimage condition="{timers[isremotetimer]}" x="1%" y="73%" width="4%" height="20%" imagetype="skinpart" path="remoteTimers" />
			</loop>
		</area>
	</timers>
	<!--<lastrecordings condition="lt({numtimers}, 4)++{showTimersRecordingsandInfos}" detached="true" delay="100" fadetime="500">-->
	<lastrecordings detached="true" delay="{03_lastrecordingsDelay}" fadetime="{03_lastrecordingsFadetime}">
		<area x="45%" y="74%" width="33%" height="6%" layer="3">
			<drawimage  x="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="shadowsLastTimersHeader" />
		</area>
		<area x="45%" y="74%" width="33%" height="5%" layer="3">
			<drawtext align="center" y="15%" font="{light}" fontsize="70%" color="{clrLightGray}" text="{tr(lastrecordings)}" />
		</area>
		<area x="45%" y="80%" width="33%" height="18%" layer="3">
			<loop name="recordings" x="0" y="0" orientation="horizontal" columnwidth="{areawidth}/3" rowheight="{areaheight}" overflow="cut">
				<drawimage x="0" y="0" width="{columnwidth}" height="{rowheight}" imagetype="skinpart" path="shadowsTimerMain" />
				<drawtext x="4%" y="10%" width="{columnwidth}*0.8" font="{light}" fontsize="15%" color="{clrLightGray}" text="{recordings[date]} {recordings[time]}" />
				<drawtextbox x="2%" y="40%" width="{columnwidth}*0.8" align="center" maxlines="3" font="{light}" fontsize="15%" color="{clrLightGray}" text="{recordings[name]}" /> 
			</loop>
		</area>
	</lastrecordings>

	<discusage detached="true" delay="{05_discusageDelay}" fadetime="{05_discusageFadetime}">
		<area x="75%" y="67%" width="20%" height="6%" layer="3">
			<drawtext x="0" y="0" align="right" valign="center" font="{light}" fontsize="60%" color="{clrLightGray}" text="{vdrusagestring}" />
		</area>
	</discusage>

	<devices mode="light" detached="true" delay="{04_devicesDelay}" fadetime="{04_devicesFadetime}">
		<area x="80%" y="74%" width="16%" height="12%" layer="3">
			<loop name="devices" x="0" y="3%" orientation="vertical" columnwidth="{areawidth}" rowheight="{areaheight}/2" overflow="cut">
				<drawtext name="label" x="5" y="{areaheight}*0.04" font="{light}" fontsize="{rowheight}*0.35" color="{clrLightGray}" text="{devices[num]}: {devices[type]}" />
				<!--<drawtext condition="{devices[hascam]}" x="{width(label)} + 15" y="{areaheight}*0.04" font="{light}" fontsize="{rowheight}*0.40" color="{clrLightGray}" text="(CAM {devices[cam]})" />-->
				<drawimage cache="true" x="80%" y="8%" imagetype="channellogo" path="{devices[channelid]}" width="20%" height="25%" />
				<drawtext condition="{devices[recording]} ++ {devices[livetv]}" x="{width(label)}*1.4" y="{areaheight}*0.03" font="{light}" fontsize="{rowheight}*0.35" color="{clrRed}" text="LiveTV, Recording" />
				<drawtext condition="{devices[recording]} ++ not{devices[livetv]}" x="{width(label)}*1.4" y="{areaheight}*0.03" font="{light}" fontsize="{rowheight}*0.35" color="{clrRed}" text="Recording" />
				<drawtext condition="not{devices[recording]} ++ {devices[livetv]}" x="{width(label)}*1.4" y="{areaheight}*0.03" font="{light}" fontsize="{rowheight}*0.35" color="{clrLightGray}" text="LiveTV" />
				<drawtext x="5" y="{rowheight}*0.4" font="{light}" fontsize="{rowheight}*0.35" color="{clrLightGray}" text="{devices[channelname]}" />
				<!--<drawrectangle  x="5" y="{rowheight}*0.5" width="{areawidth}*{devices[signalstrength]}/100*0.8" height="{areaheight}*0.015" color="{clrLightGray}" />
				<drawrectangle  x="5" y="{rowheight}*0.65" width="{areawidth}*{devices[signalquality]}/100*0.8" height="{areaheight}*0.015" color="{clrLightGray}" />-->
			</loop>  
		</area>
		<!--<area condition="eq({numdevices}, 1})" x="80%" y="74%" width="16%" height="6%" layer="3">
			<loop name="devices" x="0" y="3%" orientation="vertical" columnwidth="{areawidth}" rowheight="{areaheight}/1" overflow="cut">
				<drawtext name="label" x="5" y="{areaheight}*0.04" font="{light}" fontsize="{rowheight}*0.35" color="{clrLightGray}" text="{devices[num]}: {devices[type]}" />
				<drawimage cache="true" x="80%" y="16%" imagetype="channellogo" path="{devices[channelid]}" width="20%" height="50%" />
				<drawtext condition="{devices[recording]} ++ {devices[livetv]}" x="{width(label)}*1.4" y="{areaheight}*0.03" font="{light}" fontsize="{rowheight}*0.35" color="{clrRed}" text="LiveTV, Recording" />
				<drawtext condition="{devices[recording]} ++ not{devices[livetv]}" x="{width(label)}*1.4" y="{areaheight}*0.03" font="{light}" fontsize="{rowheight}*0.35" color="{clrRed}" text="Recording" />
				<drawtext condition="not{devices[recording]} ++ {devices[livetv]}" x="{width(label)}*1.4" y="{areaheight}*0.03" font="{light}" fontsize="{rowheight}*0.35" color="{clrLightGray}" text="LiveTV" />
				<drawtext x="5" y="{rowheight}*0.4" font="{light}" fontsize="{rowheight}*0.35" color="{clrLightGray}" text="{devices[channelname]}" />
			</loop>  
		</area>--> 
	</devices>

	<!--<systemmemory>
		<area condition="eq({numdevices}, 1})" x="80%" y="80%" width="16%" height="6%" layer="3">
			<drawtext x="0" valign="center" font="{light}" fontsize="50%" color="{clrLightGray}" text="{totalmem}MB/{usedmem}MB" />
		</area>
	</systemmemory>-->

	<currentweather detached="true" delay="{08_currentweatherDelay}" fadetime="{08_currentweatherFadetime}" >
		<area x="80%" y="92%" width="8%" height="6%" layer="3">
			<drawimage name="weathericon" x="0" valign="center" width="{areaheight}*0.8" height="{areaheight}*0.8" imagetype="icon" path="{icon}" />
			<drawtext name="temperature" x="0" align="right" valign="center" font="{light}" fontsize="50%" color="{clrLightGray}" text="{temperature}°C" />
		</area>
	    <area x="88%" y="92%" width="7%" height="5%" layer="3">
			<drawtext  x="0" y="15%" align="right" valign="top" font="{light}" fontsize="45%" color="{clrLightGray}" text="min: {mintemperature}°C" />
			<drawtext  x="0" align="right" valign="bottom" font="{light}" fontsize="45%" color="{clrLightGray}" text="max: {maxtemperature}°C" />
		</area>
	</currentweather>

	<systemload detached="true" delay="{06_systemloadDelay}" fadetime="{06_systemloadFadetime}500" >
		<area x="79%" y="74%" width="21%" height="26%" layer="3">
			<drawimage x="0" y="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="shadowsInfoMainLast" />
		</area>
		<!--<area x="80%" y="80%" width="16%" height="6%" layer="3">
			<drawtext x="0" valign="center" font="{light}" fontsize="50%" color="{clrLightGray}" text="System Load: {load}" />
		</area>-->
	</systemload>
	
	<temperatures detached="true" delay="{07_temperaturesDelay}" fadetime="{07_temperaturesFadetime}" >
		<area x="80%" y="86%" width="16%" height="6%" layer="3">		
			<drawtext x="0" valign="center" font="{light}" fontsize="50%" color="{clrLightGray}" text="CPU: {cputemp}°C        GPU: {gputemp}°C"/>
		</area>
	</temperatures>

	<menuitems x="0" y="14%" orientation="vertical" width="100%" height="50%" align="center" numlistelements="{numShortMenuitems}">
		<listelement>
			<area  x="57%" width="38%" layer="3">
				<drawimage  condition="not{current}" x="0" y="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="buttonRecMenuTVG" />
				<drawimage  condition="{current}++eq({coloredButtons}, 2)" x="0" y="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="buttonRecMenuActiveTVG_Gradient" />
				<drawimage  condition="{current}++eq({coloredButtons}, 1)" x="0" y="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="buttonRecMenuActiveTVG_Color" />
				<drawimage  condition="{current}++eq({coloredButtons}, 0)" x="0" y="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="buttonRecMenuActiveTVG" />
			</area>
			<area x="59%" width="2%" layer="3">
				<drawtext x="0" valign="center" align="right" font="{light}" fontsize="70%" color="{clrLightGray}" text="{number}" />
			</area>
			<areascroll scrollelement="menutext" mode="forthandback" orientation="horizontal" delay="1000" scrollspeed="medium" x="62%" width="33%" layer="3">
				<drawtext condition="{current}" name="menutext" x="0" valign="center" font="{light}" fontsize="70%" color="{clrLightGray}" text="{label}" />
				<drawtext condition="not{current}" name="menutext" x="0" valign="center" font="{light}" fontsize="70%" color="{clrLightGray}" text="{label}" />                
			</areascroll>
		</listelement>
	</menuitems>

	<scrollbar>
		<area condition="lt({height},1000)" x="95%" y="14%" width="5%" height="50%" layer="3">
            <drawimage   x="0" y="0" width="{areawidth}" height="{areaheight}" imagetype="skinpart" path="shadowScrollMain" />
            <drawimage x="15%" y="{areaheight} * {offset} / 1000" width="{areawidth}*0.1" height="{areaheight} * {height} / 1000" imagetype="skinpart" path="scrollBar" />
        </area>
	</scrollbar>
</menumain>
