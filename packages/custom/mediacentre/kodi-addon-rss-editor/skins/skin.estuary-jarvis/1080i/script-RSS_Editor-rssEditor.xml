<!--based on PMIII DialogMediaSource.xml by Jezz_X & chokemaniac-->
<window id="129">
    <defaultcontrol always="true">10</defaultcontrol>
	<allowoverlays>false</allowoverlays>
	<animation effect="fade" time="250">WindowOpen</animation>
	<animation effect="fade" time="250">WindowClose</animation>
    <coordinates>
		<system>1</system>
		<left>460</left>
		<top>315</top>
    </coordinates>
    <controls>
        <control type="image">
			<left>-1920</left>
			<top>-1080</top>
			<width>5760</width>
			<height>3240</height>
			<animation effect="fade" start="0" end="100" time="300">WindowOpen</animation>
			<animation effect="fade" start="100" end="0" time="200">WindowClose</animation>
			<texture colordiffuse="C2FFFFFF">colors/black.png</texture>
		</control>
		<control type="image">
			<left>0</left>
			<top>0</top>
			<width>1000</width>
			<height>450</height>
			<texture border="2">dialogs/dialog-bg-solid.png</texture>
		</control>
		<control type="image">
			<description>Dialog Header image</description>
			<left>0</left>
			<top>0</top>
			<width>1000</width>
			<height>70</height>
			<texture colordiffuse="button_focus" border="2">colors/white70.png</texture>
		</control>
        <control type="label" id="2">
            <description>Heading Label</description>
			<textoffsetx>70</textoffsetx>
			<left>-30</left>
			<top>0</top>
			<width>1000</width>
			<height>70</height>
			<visible>true</visible>
            <font>font20_title</font>
			<align>left</align>
			<aligny>center</aligny>
			<shadowcolor>black</shadowcolor>
        </control>
        <control type="button" id="22001">
			<left>-1920</left>
			<top>-1080</top>
			<width>5760</width>
			<height>3240</height>
			<texturefocus>-</texturefocus>
			<texturenofocus>-</texturenofocus>
			<onclick>Action(close)</onclick>
		</control>
		<control type="button" id="22002">
			<description>button overlay to avoid closing in dialog area</description>
			<left>0</left>
			<top>0</top>
			<width>1000</width>
			<height>450</height>
			<texturefocus>-</texturefocus>
			<texturenofocus>-</texturenofocus>
			<onclick>noop</onclick>
		</control>
		<control type="radiobutton" id="22000">
			<left>1000</left>
			<top>11</top>
			<width>48</width>
			<height>48</height>
			<radiowidth>48</radiowidth>
			<radioheight>48</radioheight>
			<texturefocus>-</texturefocus>
			<texturenofocus>-</texturenofocus>
			<label></label>
			<animation effect="slide" end="-70,0" time="0" condition="true">Conditional</animation>
			<textureradioofffocus colordiffuse="EEFFFFFF">dialogs/close.png</textureradioofffocus>
			<textureradiooffnofocus colordiffuse="EEFFFFFF">icons/logo.png</textureradiooffnofocus>
			<textureradioonfocus colordiffuse="EEFFFFFF">dialogs/close.png</textureradioonfocus>
			<textureradioonnofocus colordiffuse="EEFFFFFF">icons/logo.png</textureradioonnofocus>
            <onclick>Action(close)</onclick>
		</control>
        <control type="image">
			<left>0</left>
            <top>100</top>
			<width>720</width>
            <height>280</height>
            <texture border="40">buttons/dialogbutton-nofo.png</texture>
		</control>
        <control type="label" id="3">
            <description>List Label</description>
            <left>20</left>
            <top>70</top>
            <width>960</width>
            <height>50</height>
            <align>left</align>
            <aligny>center</aligny>            
        </control>
        <control type="list" id="10">
            <left>20</left>
            <top>120</top>
            <width>680</width>
            <height>200</height>
            <onup>9001</onup>
            <onleft>11</onleft>
            <onright>11</onright>
            <ondown>9001</ondown>
            <pagecontrol>-</pagecontrol>
            <scrolltime>200</scrolltime>
            <itemlayout height="50">
                <control type="image">
                    <left>0</left>
                    <top>0</top>
                    <width>680</width>
                    <height>50</height>
                    <texture border="5">lists/separator.png</texture>
                </control>
                <control type="label">
                    <left>20</left>
                    <top>0</top>
                    <width>660</width>
                    <height>50</height>
                    <aligny>center</aligny>
                    <align>left</align>
                    <info>ListItem.Label</info>
                </control>
            </itemlayout>
            <focusedlayout height="50">
                <control type="image">
                    <left>0</left>
                    <top>0</top>
                    <width>680</width>
                    <height>50</height>
                    <texture border="5">lists/separator.png</texture>
                    <visible>!Control.hasfocus(10)</visible>
                </control>
                <control type="image">
                    <left>0</left>
                    <top>0</top>
                    <width>680</width>
                    <height>50</height>
                    <texture border="5" colordiffuse="button_focus">lists/focus.png</texture>
                    <visible>Control.hasfocus(14)|Control.hasfocus(10)</visible>
                </control>
                <control type="label">
                    <left>20</left>
                    <top>0</top>
                    <width>660</width>
                    <height>50</height>
                    <aligny>center</aligny>
                    <align>left</align>
                    <info>ListItem.Label</info>
                </control>
            </focusedlayout>
        </control>
        <control type="group" id="9000">
            <control type="button" id="11">
                <description>Change Set Button</description>
                <left>700</left>
                <top>100</top>
                <width>300</width>
                <height>90</height>
                <textoffsetx>12</textoffsetx>
                <align>center</align>
                <aligny>center</aligny>
                <onup>14</onup>
                <onleft>10</onleft>
                <onright>10</onright>
                <ondown>13</ondown>
            </control>
            <control type="button" id="13">
                <description>Add Button</description>
                <left>700</left>
                <top>165</top>
                <width>300</width>
                <height>90</height>
                <label>$LOCALIZE[15019]</label>
                <textoffsetx>12</textoffsetx>
                <align>center</align>
                <aligny>center</aligny>
                <onup>11</onup>
                <onleft>10</onleft>
                <onright>10</onright>
                <ondown>14</ondown>
            </control>
            <control type="button" id="14">
                <description>Remove Button</description>
                <left>700</left>
                <top>230</top>
                <width>300</width>
                <height>90</height>
                <label>$LOCALIZE[1210]</label>
                <textoffsetx>12</textoffsetx>
                <align>center</align>
                <aligny>center</aligny>
                <onup>13</onup>
                <onleft>10</onleft>
                <onright>10</onright>
                <ondown>11</ondown>
            </control>
        </control>
        <control type="group" id="9001">
            <control type="button" id="18">
                <description>Ok Button</description>
                <left>200</left>
                <top>360</top>
                <width>300</width>
                <height>90</height>
                <textoffsetx>12</textoffsetx>
                <align>center</align>
                <aligny>center</aligny>
                <label>$LOCALIZE[186]</label>
                <onup>10</onup>
                <onleft>10</onleft>
                <onright>19</onright>
                <ondown>10</ondown>
            </control>
            <control type="button" id="19">
                <description>Cancel Button</description>
                <left>500</left>
                <top>360</top>
                <width>300</width>
                <height>90</height>
                <textoffsetx>12</textoffsetx>
                <align>center</align>
                <aligny>center</aligny>
                <label>$LOCALIZE[222]</label>
                <onup>10</onup>
                <onleft>18</onleft>
                <onright>11</onright>
                <ondown>10</ondown>
            </control>
        </control>
    </controls>
</window>